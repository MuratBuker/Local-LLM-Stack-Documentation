[Unit]
Description=Ollama Service
After=network-online.target

[Service]
ExecStart=/usr/local/bin/ollama serve
User=ollama
Group=ollama
Restart=always
RestartSec=3
Environment="PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:/usr/local/games:/snap/bin" "OLLAMA_HOST=0.0.0.0" "OLLAMA_CONTEXT_LENGTH=32768" "OLLAMA_NUM_PARALLEL=4" "OLLAMA_MAX_LOADED_MODELS=4" "OLLAMA_ORIGINS=http://host.docker.internal,http://172.17.0.1,http://172.19.0.1"

[Install]
WantedBy=default.target